<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="700.0" prefWidth="1100.0" style="-fx-background-color: #ecf0f1;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.db_quanlydiem.controller.AdminSubjectController">

    <!-- 1. HEADER HIỆN ĐẠI -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: linear-gradient(to right, #2c3e50, #3498db); -fx-padding: 20;" BorderPane.alignment="CENTER">
            <children>
                <VBox>
                    <children>
                        <Label text="QUẢN LÝ MÔN HỌC" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Label text="Quản lý danh mục các môn học trong chương trình đào tạo" textFill="#bdc3c7" />
                    </children>
                </VBox>
            </children>
            <effect>
                <DropShadow color="#00000040" height="10.0" radius="4.5" width="10.0" />
            </effect>
        </HBox>
    </top>

    <!-- 2. DANH SÁCH (LEFT) -->
    <center>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <!-- Thanh tìm kiếm -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="DANH SÁCH MÔN HỌC" textFill="#7f8c8d">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="txtSearch" prefWidth="250.0" promptText="Tìm theo Mã hoặc Tên môn..." style="-fx-background-radius: 20; -fx-padding: 5 10 5 10;" />
                        <Button mnemonicParsing="false" onAction="#handleSearch" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 20; -fx-cursor: hand;" text="Tìm kiếm">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleRefresh" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 20; -fx-cursor: hand;" text="↻" />
                    </children>
                </HBox>

                <TableView fx:id="tableSubject" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-base: white;" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colID" prefWidth="120.0" text="Mã Môn học" />
                        <TableColumn fx:id="colName" prefWidth="300.0" text="Tên Môn học" />
                        <TableColumn fx:id="colCredit" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Số Tín chỉ" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="10.0" top="20.0" />
            </padding>
        </VBox>
    </center>

    <!-- 3. FORM NHẬP LIỆU (RIGHT - CARD STYLE) -->
    <right>
        <VBox prefWidth="350.0" spacing="15.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="10.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label text="THÔNG TIN CHI TIẾT" textFill="#7f8c8d">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>

                <!-- Card Container -->
                <VBox spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25;">
                    <effect>
                        <DropShadow color="#0000001a" radius="10.0" width="21.0" />
                    </effect>
                    <children>
                        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="NHẬP LIỆU" textFill="#3498db">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                        </Label>

                        <GridPane hgap="10.0" vgap="15.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" prefWidth="80.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label text="Mã MH (*):" textFill="#2c3e50" />
                                <TextField fx:id="txtID" promptText="VD: IT101" style="-fx-background-color: #f8f9fa; -fx-border-color: #bdc3c7; -fx-border-radius: 3;" GridPane.columnIndex="1" />

                                <Label text="Tên MH (*):" textFill="#2c3e50" GridPane.rowIndex="1" />
                                <TextField fx:id="txtName" promptText="Nhập tên môn học" style="-fx-background-color: #f8f9fa; -fx-border-color: #bdc3c7; -fx-border-radius: 3;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                <Label text="Số tín chỉ (*):" textFill="#2c3e50" GridPane.rowIndex="2" />
                                <Spinner fx:id="spCredit" editable="true" maxWidth="100.0" style="-fx-background-color: #f8f9fa;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                            </children>
                        </GridPane>

                        <Region VBox.vgrow="ALWAYS" />

                        <!-- Buttons -->
                        <VBox spacing="10.0">
                            <children>
                                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleAdd" style="-fx-background-color: #27ae60; -fx-cursor: hand;" text="✚ Thêm Môn Mới" textFill="WHITE">
                                    <padding>
                                        <Insets bottom="12.0" top="12.0" />
                                    </padding>
                                    <font>
                                        <Font name="System Bold" size="13.0" />
                                    </font>
                                </Button>
                                <HBox spacing="10.0">
                                    <children>
                                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleUpdate" style="-fx-background-color: #f39c12; -fx-cursor: hand;" text="✎ Sửa" textFill="WHITE" HBox.hgrow="ALWAYS">
                                            <font>
                                                <Font name="System Bold" size="13.0" />
                                            </font>
                                            <padding>
                                                <Insets bottom="10.0" top="10.0" />
                                            </padding>
                                        </Button>
                                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleDelete" style="-fx-background-color: #c0392b; -fx-cursor: hand;" text="✖ Xóa" textFill="WHITE" HBox.hgrow="ALWAYS">
                                            <font>
                                                <Font name="System Bold" size="13.0" />
                                            </font>
                                            <padding>
                                                <Insets bottom="10.0" top="10.0" />
                                            </padding>
                                        </Button>
                                    </children>
                                </HBox>
                                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleClear" style="-fx-background-color: #95a5a6; -fx-cursor: hand;" text="Hủy / Làm mới" textFill="WHITE">
                                    <padding>
                                        <Insets bottom="8.0" top="8.0" />
                                    </padding>
                                </Button>
                            </children>
                        </VBox>

                    </children>
                </VBox>
            </children>
        </VBox>
    </right>

    <!-- 4. FOOTER (NÚT QUAY LẠI BÊN TRÁI) -->
    <bottom>
        <HBox alignment="CENTER_LEFT" style="-fx-padding: 15;" BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" onAction="#handleBack" prefHeight="48.0" prefWidth="152.0" style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-background-radius: 20; -fx-cursor: hand;" text="⬅ Quay lại">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                    <padding>
                        <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
                    </padding>
                </Button>
            </children>
        </HBox>
    </bottom>

</BorderPane>
