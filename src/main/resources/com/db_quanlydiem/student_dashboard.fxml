<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.db_quanlydiem.controller.StudentDashboardController">

    <!-- 1. SIDEBAR: THÔNG TIN CÁ NHÂN (BÊN TRÁI) -->
    <left>
        <VBox prefWidth="280.0" spacing="15.0" style="-fx-background-color: #2c3e50;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="40.0" />
            </padding>
            <children>
                <!-- Header Tên & MSSV (Bỏ Avatar) -->
                <VBox spacing="5.0">
                    <children>
                        <Label fx:id="lblStudentName" text="Nguyễn Văn A" textFill="WHITE" wrapText="true">
                            <font>
                                <Font name="System Bold" size="22.0" />
                            </font>
                        </Label>
                        <Label fx:id="lblStudentID" text="MSSV: 69IT1234" textFill="#f1c40f">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <Separator opacity="0.3" prefWidth="200.0" />

                <!-- Thông tin chi tiết (Đã sửa Lớp -> Khóa & Ngành) -->
                <VBox spacing="15.0">
                    <children>
                        <Label text="THÔNG TIN CƠ BẢN" textFill="#95a5a6">
                            <font>
                                <Font size="10.0" />
                            </font>
                        </Label>

                        <VBox spacing="12.0">
                            <children>
                                <HBox spacing="10.0">
                                    <children>
                                        <Label minWidth="70.0" text="Khóa:" textFill="#bdc3c7" />
                                        <Label fx:id="lblCohort" text="K69" textFill="WHITE" />
                                    </children>
                                </HBox>
                                <HBox spacing="10.0">
                                    <children>
                                        <Label minWidth="70.0" text="Ngành:" textFill="#bdc3c7" />
                                        <Label fx:id="lblMajor" text="Công nghệ phần mềm" textFill="WHITE" wrapText="true" />
                                    </children>
                                </HBox>
                                <HBox spacing="10.0">
                                    <children>
                                        <Label minWidth="70.0" text="SĐT:" textFill="#bdc3c7" />
                                        <Label fx:id="lblPhone" text="0987654321" textFill="WHITE" />
                                    </children>
                                </HBox>
                                <HBox spacing="10.0">
                                    <children>
                                        <Label minWidth="70.0" text="Email:" textFill="#bdc3c7" />
                                        <Label fx:id="lblEmail" text="a.nv@huce.edu.vn" textFill="WHITE" wrapText="true" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>

                <Region VBox.vgrow="ALWAYS" />

                <!-- Nút chức năng Sidebar -->
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleViewProfile" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-border-color: #95a5a6; -fx-border-radius: 5; -fx-background-radius: 5;" text="Chi tiết cá nhân" />
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="Đăng xuất" />
            </children>
        </VBox>
    </left>

    <!-- 2. KHU VỰC CHÍNH (GIỮA) -->
    <center>
        <VBox spacing="0.0" BorderPane.alignment="CENTER">
            <children>
                <!-- Header: Ảnh trường / Banner -->
                <StackPane prefHeight="120.0" style="-fx-background-color: #ecf0f1;">
                    <children>
                        <ImageView fitHeight="120.0" fitWidth="720.0" pickOnBounds="true" preserveRatio="true" /> <!-- Placeholder ảnh trường -->
                        <Label text="TRƯỜNG ĐẠI HỌC XÂY DỰNG HÀ NỘI" textFill="#2c3e50">
                            <font>
                                <Font name="System Bold" size="28.0" />
                            </font>
                        </Label>
                    </children>
                </StackPane>

                <!-- Thanh công cụ (Toolbar) -->
                <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-width: 0 0 1 0;">
                    <padding>
                        <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
                    </padding>
                    <children>
                        <Label text="Học kỳ:">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <ComboBox fx:id="cbSemester" prefWidth="180.0" promptText="Chọn học kỳ" />

                        <Region HBox.hgrow="ALWAYS" />

                        <!-- Switch Mode: Kết quả vs Lịch học -->
                        <HBox spacing="0.0" style="-fx-border-color: #3498db; -fx-border-radius: 5; -fx-background-radius: 5;">
                            <children>
                                <ToggleButton fx:id="btnTabGrade" mnemonicParsing="false" selected="true" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5 0 0 5;" text="Kết quả học tập">
                                    <toggleGroup>
                                        <ToggleGroup fx:id="viewMode" />
                                    </toggleGroup>
                                    <padding>
                                        <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
                                    </padding>
                                </ToggleButton>
                                <ToggleButton fx:id="btnTabSchedule" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: #3498db;" text="Lịch học" toggleGroup="$viewMode">
                                    <padding>
                                        <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
                                    </padding>
                                </ToggleButton>
                            </children>
                        </HBox>
                    </children>
                </HBox>

                <!-- Nội dung chính (Thay đổi dựa trên Tab chọn) -->
                <StackPane style="-fx-background-color: #f5f6fa;" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        <!-- View 1: Bảng điểm -->
                        <VBox fx:id="viewGrade" spacing="10.0" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 0);">
                            <children>
                                <Label text="BẢNG ĐIỂM CHI TIẾT" textFill="#2980b9">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets left="15.0" top="15.0" />
                                    </VBox.margin>
                                </Label>
                                <TableView fx:id="tableGrade" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="colSubjectName" prefWidth="250.0" text="Tên môn học" />
                                        <TableColumn fx:id="colCredit" prefWidth="80.0" style="-fx-alignment: CENTER;" text="Tín chỉ" />
                                        <TableColumn fx:id="colScore1" prefWidth="80.0" style="-fx-alignment: CENTER;" text="ĐG 1" />
                                        <TableColumn fx:id="colScore2" prefWidth="80.0" style="-fx-alignment: CENTER;" text="ĐG 2" />
                                        <TableColumn fx:id="colScoreFinal" prefWidth="80.0" style="-fx-alignment: CENTER;" text="Cuối kỳ" />
                                        <TableColumn fx:id="colScoreAvg" prefWidth="80.0" style="-fx-alignment: CENTER; -fx-font-weight: bold;" text="Tổng kết" />
                                        <TableColumn fx:id="colNote" prefWidth="150.0" text="Ghi chú" />
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>

                        <!-- View 2: Lịch học (Ẩn mặc định) -->
                        <VBox fx:id="viewSchedule" spacing="10.0" style="-fx-background-color: white;" visible="false">
                            <children>
                                <Label text="LỊCH HỌC TRONG TUẦN" textFill="#e67e22">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets left="15.0" top="15.0" />
                                    </VBox.margin>
                                </Label>
                                <TableView fx:id="tableSchedule" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="colDay" text="Thứ" />
                                        <TableColumn fx:id="colShift" text="Ca học" />
                                        <TableColumn fx:id="colSubjectSchedule" text="Môn học" />
                                        <TableColumn fx:id="colRoom" text="Phòng" />
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>
                    </children>
                </StackPane>

                <!-- Footer: Tổng kết GPA/CPA -->
                <HBox alignment="CENTER_RIGHT" spacing="30.0" style="-fx-background-color: #34495e;">
                    <padding>
                        <Insets bottom="15.0" left="20.0" right="30.0" top="15.0" />
                    </padding>
                    <children>
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Label text="GPA (Kỳ này):" textFill="#bdc3c7" />
                                <Label fx:id="lblGPA" text="3.65" textFill="#2ecc71">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Label text="CPA (Tích lũy):" textFill="#bdc3c7" />
                                <Label fx:id="lblCPA" text="3.20" textFill="#f1c40f">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>
                            </children>
                        </HBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
