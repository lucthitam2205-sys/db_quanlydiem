<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" style="-fx-background-color: white; -fx-padding: 20;" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.db_quanlydiem.controller.RequestReviewController">
    <children>
        <Label text="YÊU CẦU PHÚC KHẢO" textFill="#2c3e50">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <Label fx:id="lblSubjectInfo" text="Môn học: ..." textFill="#7f8c8d" wrapText="true">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>

        <Label text="Lý do phúc khảo (*):" />
        <TextArea fx:id="txtReason" prefHeight="150.0" wrapText="true" promptText="Nhập chi tiết lý do bạn muốn phúc khảo điểm môn này..." style="-fx-border-color: #bdc3c7; -fx-border-radius: 3;" />

        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleCancel" style="-fx-background-color: #95a5a6; -fx-cursor: hand;" text="Hủy" textFill="WHITE" />
                <Button mnemonicParsing="false" onAction="#handleSubmit" style="-fx-background-color: #3498db; -fx-cursor: hand;" text="Gửi yêu cầu" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>