<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="700.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.db_quanlydiem.controller.ProfessorDashboardController">

    <!-- 1. SIDEBAR: THÔNG TIN GIẢNG VIÊN -->
    <left>
        <VBox prefWidth="280.0" spacing="15.0" style="-fx-background-color: #2c3e50;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="40.0" />
            </padding>
            <children>
                <!-- Header Tên & Mã GV -->
                <VBox spacing="5.0">
                    <children>
                        <Label text="GIẢNG VIÊN" textFill="#95a5a6">
                            <font>
                                <Font size="10.0" />
                            </font>
                        </Label>
                        <Label fx:id="lblProfName" text="Nguyễn Văn An" textFill="WHITE" wrapText="true">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>
                        <Label fx:id="lblProfID" text="Mã GV: GV001" textFill="#f1c40f">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <Separator opacity="0.3" />

                <!-- Thông tin chi tiết -->
                <VBox spacing="15.0">
                    <children>
                        <HBox spacing="10.0">
                            <children>
                                <Label minWidth="80.0" text="Chức danh:" textFill="#bdc3c7" />
                                <Label fx:id="lblTitle" text="Tiến sĩ" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </HBox>
                        <HBox spacing="10.0">
                            <children>
                                <Label minWidth="80.0" text="SĐT:" textFill="#bdc3c7" />
                                <Label fx:id="lblPhone" text="0901234567" textFill="WHITE" />
                            </children>
                        </HBox>
                        <HBox spacing="10.0">
                            <children>
                                <Label minWidth="80.0" text="Email:" textFill="#bdc3c7" />
                                <Label fx:id="lblEmail" text="an.nv@huce.edu.vn" textFill="WHITE" wrapText="true" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <Region VBox.vgrow="ALWAYS" />

                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="Đăng xuất" />
            </children>
        </VBox>
    </left>

    <!-- 2. KHU VỰC CHÍNH -->
    <center>
        <VBox spacing="0.0" BorderPane.alignment="CENTER">
            <children>
                <!-- Banner -->
                <StackPane prefHeight="100.0" style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-width: 0 0 1 0;">
                    <children>
                        <ImageView fitHeight="100.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true" />
                        <Label text="HỆ THỐNG QUẢN LÝ ĐIỂM - DÀNH CHO GIẢNG VIÊN" textFill="#2c3e50">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                    </children>
                </StackPane>

                <!-- Toolbar & Filter -->
                <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: white; -fx-padding: 15;">
                    <children>
                        <Label text="Chọn Lớp học:">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <ComboBox fx:id="cbClass" prefWidth="250.0" promptText="-- Chọn lớp học phần --" />

                        <Region HBox.hgrow="ALWAYS" />

                        <TextField fx:id="txtSearchStudent" prefWidth="200.0" promptText="Tìm kiếm sinh viên..." />
                        <Button mnemonicParsing="false" style="-fx-background-color: #3498db;" text="Tìm" textFill="WHITE" />
                    </children>
                </HBox>

                <!-- Table Grades -->
                <VBox spacing="10.0" style="-fx-background-color: #f5f6fa;" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <children>
                        <TableView fx:id="tableGrades" editable="true" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colSTT" prefWidth="50.0" style="-fx-alignment: CENTER;" text="STT" />
                                <TableColumn fx:id="colStudentID" prefWidth="100.0" text="Mã SV" />
                                <TableColumn fx:id="colStudentName" prefWidth="200.0" text="Họ và Tên" />
                                <TableColumn fx:id="colScore1" prefWidth="80.0" style="-fx-alignment: CENTER;" text="ĐG 1" />
                                <TableColumn fx:id="colScore2" prefWidth="80.0" style="-fx-alignment: CENTER;" text="ĐG 2" />
                                <TableColumn fx:id="colScoreFinal" prefWidth="80.0" style="-fx-alignment: CENTER;" text="Cuối kỳ" />
                                <TableColumn fx:id="colScoreAvg" prefWidth="80.0" style="-fx-alignment: CENTER; -fx-font-weight: bold; -fx-background-color: #ecf0f1;" text="Tổng kết" />
                                <TableColumn fx:id="colNote" prefWidth="150.0" text="Ghi chú" />
                            </columns>
                        </TableView>

                        <!-- Statistics Bar -->
                        <HBox spacing="0.0" style="-fx-border-color: #95a5a6; -fx-background-color: white;">
                            <children>
                                <Label alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-border-color: transparent #95a5a6 transparent transparent; -fx-padding: 10;" text="Tổng số SV:" HBox.hgrow="ALWAYS" />
                                <Label fx:id="lblTotalStudents" alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-border-color: transparent #95a5a6 transparent transparent; -fx-padding: 10; -fx-font-weight: bold;" text="60" HBox.hgrow="ALWAYS" />

                                <Label alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-border-color: transparent #95a5a6 transparent transparent; -fx-padding: 10;" text="Tỷ lệ Xuất sắc:" HBox.hgrow="ALWAYS" />
                                <Label fx:id="lblRateExcellent" alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-border-color: transparent #95a5a6 transparent transparent; -fx-padding: 10; -fx-font-weight: bold; -fx-text-fill: #27ae60;" text="15%" HBox.hgrow="ALWAYS" />

                                <Label alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-border-color: transparent #95a5a6 transparent transparent; -fx-padding: 10;" text="Tỷ lệ Giỏi:" HBox.hgrow="ALWAYS" />
                                <Label fx:id="lblRateGood" alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-border-color: transparent #95a5a6 transparent transparent; -fx-padding: 10; -fx-font-weight: bold; -fx-text-fill: #2980b9;" text="40%" HBox.hgrow="ALWAYS" />

                                <Label alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-border-color: transparent #95a5a6 transparent transparent; -fx-padding: 10;" text="Tỷ lệ Khá:" HBox.hgrow="ALWAYS" />
                                <Label fx:id="lblRateFair" alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-border-color: transparent #95a5a6 transparent transparent; -fx-padding: 10; -fx-font-weight: bold; -fx-text-fill: #e67e22;" text="35%" HBox.hgrow="ALWAYS" />

                                <Label alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-border-color: transparent #95a5a6 transparent transparent; -fx-padding: 10;" text="Tỷ lệ TB:" HBox.hgrow="ALWAYS" />
                                <Label fx:id="lblRateAverage" alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-padding: 10; -fx-font-weight: bold; -fx-text-fill: #c0392b;" text="10%" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- Action Buttons Footer -->
                <HBox alignment="CENTER_RIGHT" spacing="15.0" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #bdc3c7; -fx-border-width: 1 0 0 0;">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleAttendance" style="-fx-background-color: white; -fx-border-color: #34495e; -fx-border-radius: 5; -fx-background-radius: 5;" text="Điểm danh" textFill="#34495e">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                  <Pane prefHeight="32.0" prefWidth="219.0" />
                        <Button mnemonicParsing="false" onAction="#handleExportList" style="-fx-background-color: #34495e; -fx-background-radius: 5;" text="Xuất danh sách" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                  <Pane prefHeight="32.0" prefWidth="188.0" />

                              <Button mnemonicParsing="false" onAction="#handleSaveGrades" style="-fx-background-color: #27ae60; -fx-background-radius: 5;" text="Lưu thay đổi" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
