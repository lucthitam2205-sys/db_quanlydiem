<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.db_quanlydiem.controller.AttendanceController">

    <!-- 1. HEADER: ẢNH TRƯỜNG (GRADIENT) -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: linear-gradient(to right, #2c3e50, #3498db); -fx-padding: 20;" BorderPane.alignment="CENTER">
            <children>
                <VBox>
                    <children>
                        <Label text="ĐIỂM DANH LỚP HỌC PHẦN" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Label text="Ghi nhận chuyên cần theo lịch học" textFill="#bdc3c7" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </top>

    <!-- 2. KHU VỰC CHÍNH: BẢNG ĐIỂM DANH -->
    <center>
        <VBox spacing="15.0" style="-fx-background-color: #f5f6fa;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <!-- Thông tin lớp học -->
                <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 0);">
                    <children>
                        <Label text="Lớp:" textFill="#7f8c8d">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="lblClassName" text="IT101.L01 - Nhập môn Lập trình" textFill="#2c3e50">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>

                        <Region HBox.hgrow="ALWAYS" />

                        <Label text="Chọn buổi học:" textFill="#7f8c8d">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <!-- ĐÃ THAY DATEPICKER BẰNG COMBOBOX -->
                        <ComboBox fx:id="cbSession" prefWidth="250.0" promptText="-- Chọn ngày học --" style="-fx-background-color: #f8f9fa; -fx-border-color: #bdc3c7; -fx-border-radius: 3;" />
                    </children>
                </HBox>

                <!-- Bảng Danh sách SV -->
                <TableView fx:id="tableAttendance" editable="true" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-base: white;" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colSTT" prefWidth="50.0" style="-fx-alignment: CENTER;" text="STT" />
                        <TableColumn fx:id="colStudentID" prefWidth="120.0" text="Mã SV" />
                        <TableColumn fx:id="colStudentName" prefWidth="250.0" text="Họ và Tên" />

                        <!-- Cột Checkbox Điểm danh -->
                        <TableColumn fx:id="colStatus" prefWidth="150.0" style="-fx-alignment: CENTER;" text="Trạng thái">
                            <graphic>
                                <Label text="Vắng / Có mặt" />
                            </graphic>
                        </TableColumn>

                        <TableColumn fx:id="colNote" prefWidth="250.0" text="Ghi chú (Lý do vắng)" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </center>

    <!-- 3. FOOTER: NÚT ĐIỀU HƯỚNG -->
    <bottom>
        <HBox alignment="CENTER" spacing="50.0" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #bdc3c7; -fx-border-width: 1 0 0 0;" BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" onAction="#closeWindow" prefWidth="150.0" style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" text="Quay lại">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>

                <Region HBox.hgrow="ALWAYS" />

                <Button mnemonicParsing="false" onAction="#saveAttendance" prefWidth="150.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" text="Lưu thay đổi">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </bottom>

</BorderPane>